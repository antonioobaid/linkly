{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "..",                   // <- en nivÃ¥ upp
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "./**/*.ts",                      
    "../shared/**/*.ts"               
  ],
  "exclude": ["node_modules", "dist"]
}
